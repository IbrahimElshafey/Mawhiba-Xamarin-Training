<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MawhibaSample.App">
    <Application.Resources>
        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Background" Value="LightGreen"/>
        </Style>
        <Style x:Key="Header1" TargetType="Label">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="TextColor" Value="DarkSlateGray"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <x:String x:Key="StringInResources">Any Value</x:String>
        <Style  TargetType="Picker">
            <Setter Property="FontFamily" Value="TR"/>
        </Style>
        <Style  TargetType="Entry">
            <Setter Property="FontFamily" Value="TR"/>
        </Style>
        <Style  TargetType="Label">
            <Setter Property="FontFamily" Value="TR"/>
        </Style>
        <Style x:Key="EntryLabel" TargetType="Label" >
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="TextColor" Value="BlueViolet"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>